{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build main program",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "BankOfCppAndSQL.cpp",
                "${workspaceFolder}/Releases/*.o",
                "-lpqxx",
                "-lpq",
                "-lboost_system",
                "-lboost_filesystem",
                "-o",
                "${workspaceFolder}/Releases/BankOfCppAndSQL"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build Bank.o",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-c",
                "-std=c++17",
                "Bank.cpp",
                "-o",
                "${workspaceFolder}/Releases/Bank.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build DBConfigurator.o",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-c",
                "-std=c++17",
                "DBConfigurator.cpp",
                "-o",
                "${workspaceFolder}/Releases/DBConfigurator.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}